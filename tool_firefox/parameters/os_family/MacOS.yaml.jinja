{#- vim: ft=sls #}
{#-
    Set values specific to:
      salt['config.get']('os') == MacOS.

    You just need to add the key:values for this `os` that differ
    from `defaults.yaml` + `<osarch>.yaml` + `<os_family>.yaml`.

    This jinja2 file must return a valid `map.jinja` YAML.

    If you do not need to provide calculated values via the `os`
    config, you can remove this file or provide at least an empty
    dict, e.g.
    values: {}
#}
---
values:
  lookup:
    pkg:
      beta:
        name: homebrew/cask-versions/firefox-beta
        type: pkg
      dev:
        name: homebrew/cask-versions/firefox-developer-edition
        type: pkg
      esr:
        name: homebrew/cask-versions/firefox-esr
        type: pkg
      nightly:
        name: homebrew/cask-versions/firefox-nightly
        type: pkg
      stable:
        name: homebrew/cask/firefox
        type: pkg
    paths:
      beta:
        bin_sub: Contents/MacOS/firefox
        installation: /Applications/Firefox.app
        profiles: Library/Application Support/Firefox/Profiles
      dev:
        bin_sub: Contents/MacOS/firefox
        installation: /Applications/Firefox Developer Edition.app
        profiles: Library/Application Support/Firefox/Profiles
      esr:
        bin_sub: Contents/MacOS/firefox
        installation: /Applications/Firefox.app
        profiles: Library/Application Support/Firefox/Profiles
      nightly:
        bin_sub: Contents/MacOS/firefox
        installation: /Applications/Firefox Nightly.app
        profiles: Library/Application Support/Firefox/Profiles
      stable:
        bin_sub: Contents/MacOS/firefox
        installation: /Applications/Firefox.app
        profiles: Library/Application Support/Firefox/Profiles
      manager: brew
    rootgroup: {{ salt['cmd.run']("stat -f '%Sg' /dev/console") }}
...
